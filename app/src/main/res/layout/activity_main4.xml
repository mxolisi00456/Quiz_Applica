<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"

    tools:context="com.example.admin.quizapplica.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="questions"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="1. This was the first network"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="1dp">

            <RadioButton
                android:id="@+id/radioP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="1dp"
                android:text="arpernet"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/radioQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="1dp"
                android:text="ansnet"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/radioR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="10dp"
                android:text="CSNET" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="2.There are __ Internet service providers."
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="1dp">

            <RadioButton
                android:id="@+id/radioS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="1dp"
                android:text="local"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/radioT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="1dp"
                android:text="regional"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/radioU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="1dp"
                android:text="all of the above"
                android:textAllCaps="true" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="3.Which of the following is NOT an interpreted language?"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="1dp">

        <RadioButton
            android:id="@+id/radioV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="ruby"
            android:textAllCaps="true" />


        <RadioButton
            android:id="@+id/radioW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="10dp"
            android:text="python"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="basic"
            android:textAllCaps="true" />
        </RadioGroup>


        <TextView
            android:id="@+id/textView0014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="4.Which of the following device regulates internet traffic?"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="1dp" >

        <RadioButton
            android:id="@+id/radioY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="router"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="bridge"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioAA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="hub"
            android:textAllCaps="true" />
        </RadioGroup>


        <TextView
            android:id="@+id/textView00014"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="5.Which of the following is the fastest writable memory? "
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="1dp">

            <RadioButton
                android:id="@+id/radioBB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="10dp"
                android:text="ram"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/radioCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="1dp"
                android:text="Flash"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/radioDD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="1dp"
                android:text="Register"
                android:textAllCaps="true" />
            </RadioGroup>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="scoreR"
                android:text="view results" />

            <TextView
                android:id="@+id/displayR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
