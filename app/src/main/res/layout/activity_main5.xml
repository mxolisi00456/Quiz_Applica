<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/holo_blue_bright"
    tools:context="com.example.admin.quizapplica.Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="questions"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/textView111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="1.The 2008 Olympics was held at"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="1dp" >

        <RadioButton
            android:id="@+id/radioEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="Beijing"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="brazil"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioGG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="russia"
            android:textAllCaps="true" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView130"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="2.Ronaldo is associated with"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup140"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="1dp" >

        <RadioButton
            android:id="@+id/radioHH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="Hockey"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioII"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="Football"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioJJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text=" Tennis"
            android:textAllCaps="true" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView1300"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="3.Which of the following terms is associated with chess?"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup1400"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="1dp" >

        <RadioButton
            android:id="@+id/radioKK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="Gambit"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="Vulnerable"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioMM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="onRadioButtonClicked"
            android:paddingRight="1dp"
            android:text="Pitcher"
            android:textAllCaps="true" />
        </RadioGroup>


        <TextView
            android:id="@+id/textView13000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="4.What is the National Game of Russia?"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup14000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="1dp" >

        <RadioButton
            android:id="@+id/radioNON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="Chess"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioMMM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="Hockey"
            android:textAllCaps="true" />

        <RadioButton
            android:id="@+id/radioOO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingRight="1dp"
            android:text="Baseball"
            android:textAllCaps="true" />
        </RadioGroup>


        <TextView
            android:id="@+id/textView1300000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="5.How many players are there in a cricket team?"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGroup1400000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:padding="1dp">

            <RadioButton
                android:id="@+id/radioPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="1dp"
                android:text="15"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/radioQQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="1dp"
                android:text="7"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/radioRR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingRight="1dp"
                android:text="11"
                android:textAllCaps="true" />
            </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="scoreQ"
                android:text="view results" />

            <TextView
                android:id="@+id/displayQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



    </LinearLayout>
</ScrollView>